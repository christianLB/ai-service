#!/bin/bash
# Comando Claude: GestiÃ³n segura de secrets

set -e

ACTION=${1:-help}
ENV=${2:-development}

case "$ACTION" in
    init)
        echo "ğŸ” Inicializando secrets para: $ENV"
        ./scripts/secure-env-manager.sh init "$ENV"
        ;;
    switch)
        echo "ğŸ”„ Cambiando a environment: $ENV"
        ./scripts/secure-env-manager.sh switch "$ENV"
        ;;
    audit)
        echo "ğŸ” Auditando secrets..."
        ./scripts/secure-env-manager.sh audit
        ;;
    *)
        echo "ğŸ” GestiÃ³n de Secrets"
        echo "===================="
        echo ""
        echo "Uso: secrets <acciÃ³n> [environment]"
        echo ""
        echo "Acciones:"
        echo "  init [env]    - Inicializar secrets para un environment"
        echo "  switch [env]  - Cambiar entre environments"
        echo "  audit         - Buscar posibles leaks de secrets"
        echo ""
        echo "Environments: development, production, testing"
        ;;
esac