{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "src/index.stable.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "frontend/**",
    "tests/**",
    "migrations/**",
    "prisma/**",
    "scripts/**",
    "src/services/trading/**",
    "src/services/tagging/**",
    "src/services/financial/invoice-attachment.service.ts",
    "src/routes/financial/invoice-attachment.routes.ts"
  ]
}
