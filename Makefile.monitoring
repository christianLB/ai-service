.PHONY: alerts-check
alerts-check: ## Verificar condiciones de alerta
	@echo "$(RED)ðŸš¨ VERIFICANDO ALERTAS ðŸš¨$(NC)"
	@echo ""
	@ALERTS=0; \
	echo "$(YELLOW)Verificando condiciones crÃ­ticas...$(NC)"; \
	ERROR_COUNT=$$($(SSH_CMD) $(NAS_USER)@$(NAS_HOST) "sudo docker logs --since 5m $(CONTAINER_NAME) 2>&1 | grep -iE 'error|exception' | wc -l"); \
	if [ $$ERROR_COUNT -gt 10 ]; then \
		echo "  $(RED)âš  ALERTA: $$ERROR_COUNT errores en los Ãºltimos 5 minutos$(NC)"; \
		ALERTS=$$((ALERTS + 1)); \
	fi; \
	RESPONSE_TIME=$$(curl -o /dev/null -s -w '%{time_total}' http://$(NAS_HOST):3003/status); \
	if (( $$(echo "$$RESPONSE_TIME > 2" | bc -l) )); then \
		echo "  $(RED)âš  ALERTA: Tiempo de respuesta alto: $${RESPONSE_TIME}s$(NC)"; \
		ALERTS=$$((ALERTS + 1)); \
	fi; \
	if ! $(SSH_CMD) $(NAS_USER)@$(NAS_HOST) "sudo docker ps | grep -q $(CONTAINER_NAME)"; then \
		echo "  $(RED)âš  ALERTA: Contenedor $(CONTAINER_NAME) no estÃ¡ corriendo$(NC)"; \
		ALERTS=$$((ALERTS + 1)); \
	fi; \
	echo ""; \
	if [ $$ALERTS -eq 0 ]; then \
		echo "$(GREEN)âœ“ No hay alertas activas$(NC)"; \
	else \
		echo "$(RED)âœ— $$ALERTS alertas activas$(NC)"; \
	fi

