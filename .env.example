# AI Service Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://ai_user:password@localhost:5432/ai_service
POSTGRES_PASSWORD=ultra_secure_password_2025
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_secure_password_2025

# Queue System Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRY=3
BULL_BOARD_USERNAME=admin
BULL_BOARD_PASSWORD=admin123
BULL_BOARD_PORT=3200

# Queue Monitoring
QUEUE_METRICS_ENABLED=true
QUEUE_ALERT_THRESHOLD_FAILED=50
QUEUE_ALERT_THRESHOLD_WAITING=1000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_personal_chat_id
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# N8N Configuration
N8N_ADMIN_PASSWORD=n8n_admin_2025
N8N_API_KEY=your_n8n_api_key
WEBHOOK_URL=https://your-domain.com

# AI APIs
OPENAI_API_KEY=your_openai_api_key
CLAUDE_API_KEY=your_claude_api_key

# GoCardless configuration is now managed through the database
# Use the integration settings API to configure GoCardless

# Dashboard Configuration
DASHBOARD_URL=https://your-domain.com/dashboard
GRAFANA_ADMIN_PASSWORD=grafana_admin_password_2025

# Other URLs
WEBHOOK_URL=https://your-domain.com