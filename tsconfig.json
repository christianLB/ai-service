{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["packages/contracts/src/*"],
      "@clients/financial/*": ["packages/clients/financial/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*", "node_modules", "dist", "frontend/**/*"],
  "references": [
    { "path": "packages/contracts" },
    { "path": "packages/clients/financial" }
  ]
}