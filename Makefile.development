.PHONY: dev-status
dev-status: ## Estado del ambiente local
	@echo "$(BLUE)ğŸ“Š ESTADO DE DESARROLLO LOCAL$(NC)"
	@echo "$(YELLOW)â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”$(NC)"
